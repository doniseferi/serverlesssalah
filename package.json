{
  "name": "severlesssalah",
  "version": "1.0.0",
  "description": "A serverless http triggered application to get the exact date and time in an ISO 8601 format for any of the five daily prayers at any location and date.",
  "scripts": {
    "build:production": "npm run prestart && npm prune -- production",
    "copy-to-dist": "copyfiles --up 1 \"src/**/*.json\" dist && copyfiles package.json package-lock.json dist",
    "build": "npm run clean && tsc && npm run copy-to-dist",
    "watch": "tsc --w",
    "build:docker": "docker build --tag doniseferi/serverlesssalah:latest.test .",
    "run:docker": "docker-compose up --remove-orphans",
    "prestart": "npm run build",
    "start:host": "func start",
    "start": "cd dist && func extensions install && npm run start:host watch",
    "lint": "eslint . --ext .ts --fix",
    "pretty": "prettier --config .prettierrc.json --write \"./**/*.{js,ts,json,md}\"",
    "clean": "npm install && rimraf dist",
    "test": "jest --testRegex \"\\.test\\.ts$\"",
    "test-save-results": "cross-env JEST_JUNIT_OUTPUT=test-results/test-results-local.xml jest --ci --runInBand --reporters=default --reporters=jest-junit --testRegex \"\\.test\\.ts$\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doniseferi/serverlesssalah.git"
  },
  "author": "Edonis Seferi <doni.seferi@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "salahtimes": "^1.1.15"
  },
  "devDependencies": {
    "@azure/functions": "^1.2.2",
    "@fluffy-spoon/substitute": "^1.145.0",
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "copyfiles": "^2.3.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.2.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  }
}